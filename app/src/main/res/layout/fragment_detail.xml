<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    >

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:padding="@dimen/activity_vertical_margin"

        android:orientation="vertical"

        >

        <!-- TextView to show the date -->

        <TextView

            android:id="@+id/fd_tv_date"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:text="@string/mock_date"

            />

        <!-- LinearLayout to hold the temperatures and the forecast icon and description -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="horizontal"

            android:layout_marginTop="@dimen/layout_padding"

            android:paddingBottom="@dimen/space_between_content_areas"

            android:baselineAligned="false"

            >

            <!-- LinearLayout to hold the high and low temperatures -->

            <LinearLayout

                android:layout_width="0dp"

                android:layout_height="match_parent"

                android:layout_weight="1"

                android:orientation="vertical"

                android:baselineAligned="false"

                android:gravity="center_vertical"

                >

                <!-- TextView for the high temperature -->

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:id="@+id/fd_tv_high_temperature"

                    android:paddingBottom="@dimen/text_baseline"

                    android:text="@string/mock_high_temp"

                    />

                <!-- TextView for the low temperature -->

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:id="@+id/fd_tv_low_temperature"

                    android:text="@string/mock_low_temp"

                    />

            </LinearLayout>

            <!-- LinearLayout to hold the forecast icon and description -->

            <LinearLayout

                android:layout_width="0dp"

                android:layout_height="match_parent"

                android:layout_weight="1"

                android:orientation="vertical"

                android:gravity="center_horizontal"

                >

                <!-- ImageButton to show the forecast icon -->

                <!--
                transparent background added because
                there was a default grey background that didn't look good.
                -->
                <ImageButton

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:contentDescription="@string/description_detail_weather_icon"

                    android:id="@+id/fd_iv_weather_icon"

                    android:background="@android:color/transparent"

                    android:src="@mipmap/ic_launcher"

                    />

                <!-- TextView to show the forecast description -->

                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:id="@+id/fd_tv_description"

                    android:text="@string/mock_description"

                    />

            </LinearLayout>

        </LinearLayout>

        <!-- LinearLayout to hold the humidity, wind, and pressure -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <!-- TextView to hold humidity -->

            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:id="@+id/fd_tv_humidity"

                android:paddingBottom="@dimen/space_between_content_areas"

                android:text="@string/mock_humidity"

                />

            <!-- TextView to hold wind -->

            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:id="@+id/fd_tv_wind"

                android:paddingBottom="@dimen/space_between_content_areas"

                android:text="@string/mock_wind"

                />

            <!-- TextView to hold pressure -->

            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:id="@+id/fd_tv_pressure"

                android:paddingBottom="@dimen/space_between_content_areas"

                android:text="@string/mock_pressure"

                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

